{
  "name": "crm",
  "version": "1.0.0",
  "author": "",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "turbo build",
    "lint": "turbo lint",
    "test": "turbo test",
    "prepare": "husky",
    "release": "release-it",
    "gateway:broker:gen": "pnpm ts-node ./apps/gateway/scripts/gen.ts broker 3001",
    "db:migrate:generate": "pnpm --filter @crm/database db:migrate:generate",
    "db:migrate:up": "pnpm --filter @crm/database db:migrate:up",
    "db:migrate:down": "pnpm --filter @crm/database db:migrate:down",
    "db:seed": "pnpm --filter @crm/database db:seed"
  },
  "devDependencies": {
    "@commitlint/cli": "19.5.0",
    "@commitlint/config-conventional": "19.5.0",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.9.0",
    "@nestjs/cli": "^11.0.14",
    "@release-it/conventional-changelog": "9.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.18.13",
    "@typescript-eslint/eslint-plugin": "8.32.1",
    "@typescript-eslint/parser": "8.32.1",
    "env-cmd": "^11.0.0",
    "eslint": "9.26.0",
    "eslint-config-prettier": "10.1.5",
    "eslint-plugin-perfectionist": "^4.15.0",
    "eslint-plugin-prettier": "5.4.0",
    "eslint-plugin-unused-imports": "^4.2.0",
    "globals": "^15.9.0",
    "husky": "9.1.6",
    "jest": "29.7.0",
    "prettier": "3.3.3",
    "release-it": "17.6.0",
    "ts-jest": "^29.4.6",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "tslib": "2.7.0",
    "turbo": "^2.5.4",
    "typescript": "5.8.3"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "CHANGELOG.md",
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "chore(deps)",
              "section": "Dependency Upgrades"
            },
            {
              "type": "fix(deps)",
              "section": "Dependency Upgrades"
            },
            {
              "type": "feat",
              "section": "Features"
            },
            {
              "type": "fix",
              "section": "Bug Fixes"
            },
            {
              "type": "docs",
              "section": "Documentation"
            },
            {
              "type": "refactor",
              "section": "Code Refactoring"
            },
            {
              "type": "test",
              "section": "Tests"
            }
          ]
        }
      }
    }
  },
  "packageManager": "pnpm@10.12.1+sha512.f0dda8580f0ee9481c5c79a1d927b9164f2c478e90992ad268bbb2465a736984391d6333d2c327913578b2804af33474ca554ba29c04a8b13060a717675ae3ac"
}
