{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalDependencies": [
    "**/.env"
  ],
  "globalEnv": [
    "NODE_ENV"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**", ".next/**", "generated/**"
      ]
    },
    "test": {
      "dependsOn": [
        "^test"
      ]
    },
    "db:migrate:up": {
      "cache": false
    },
    "db:migrate:down": {
      "cache": false
    },
    "db:migrate:generate": {
      "cache": false
    },
    "lint": {
      "inputs": [
        "**/*.{ts,tsx}"
      ]
    }
  }
}